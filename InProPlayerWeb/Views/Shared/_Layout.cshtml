    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ModalLabel">@ViewData["ErrorTitle"]</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" onClick="$('#myModal').modal('hide');">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @ViewData["ErrorBody"]
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" onClick="$('#myModal').modal('hide');">關閉</button>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
